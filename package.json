  "bugs": {
    "url": "https://github.com/ikoroleva/crud-api/issues"
  },
  "homepage": "https://github.com/ikoroleva/crud-api#readme",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.6.2",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
